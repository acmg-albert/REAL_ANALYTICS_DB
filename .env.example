# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=real_estate_analytics
DB_USER=your_username
DB_PASSWORD=your_password

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API Configuration
APARTMENT_LIST_API_KEY=your_api_key
APARTMENT_LIST_API_BASE_URL=https://www.apartmentlist.com/api/v2

# Scraping Configuration
SCRAPING_DELAY=2.0
MAX_RETRIES=3
TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Data Source URLs
APARTMENTLIST_BASE_URL=https://www.apartmentlist.com/research/category/data-rent-estimates
ZILLOW_HOMEOWNER_AFFORDABILITY_URL=https://files.zillowstatic.com/research/public_csvs/new_homeowner_affordability/Metro_new_homeowner_affordability_downpayment_0.20_uc_sfrcondo_tier_0.33_0.67_sm_sa_month.csv
ZILLOW_RENTER_AFFORDABILITY_URL=https://files.zillowstatic.com/research/public_csvs/new_renter_affordability/Metro_new_renter_affordability_uc_sfrcondomfr_sm_sa_month.csv

# File Paths
DOWNLOAD_PATH=data/raw
PROCESSED_PATH=data/processed
ARCHIVE_PATH=data/archive
LOG_PATH=logs

# Data Retention (in days)
RAW_DATA_RETENTION_DAYS=7
PROCESSED_DATA_RETENTION_DAYS=30
ARCHIVE_RETENTION_DAYS=60
LOG_RETENTION_DAYS=30

# Data Validation
MIN_RENT_VALUE=0
MAX_RENT_VALUE=10000
MIN_AFFORDABILITY_RATIO=0
MAX_AFFORDABILITY_RATIO=100
VALIDATE_DATE_CONTINUITY=true
VALIDATE_LOCATION_CODES=true

# Time On Market Data Validation
MIN_TIME_ON_MARKET_ROWS=100
MIN_TIME_ON_MARKET_COLUMNS=70
EARLIEST_TIME_ON_MARKET_YEAR=2019
EARLIEST_TIME_ON_MARKET_MONTH=01

# Batch Processing
IMPORT_BATCH_SIZE=1000
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# Error Handling
MAX_IMPORT_RETRIES=3
RETRY_DELAY=5
ERROR_NOTIFICATION_THRESHOLD=10

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_MONITORING=true
MONITORING_INTERVAL=60

# Email Notification (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@gmail.com
ENABLE_ERROR_NOTIFICATIONS=true
ENABLE_SUCCESS_NOTIFICATIONS=false

# Data Directory Configuration
DATA_DIR=./data 